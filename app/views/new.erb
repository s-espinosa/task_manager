    <h1>New Task</h1>
    <form action="/tasks" method="post" role="form">
      <p>Enter a new task:</p>
      <div class="form-group">
        <input type='text' class="form_control" name='task[title]'/><br/>
      </div>
      <div class="form-group">
        <textarea class="form_control" name='task[description]'></textarea><br/>
      </div>
      <div class="form-group">
        <input class="form_control btn btn-default" type='submit'/>
      </div>
    </form>

<form action="/tasks/<%= @task.id %>" method="post" role="form">
  <p>Edit</p>
  <input type="hidden" name="_method" value="put">
  <input type="text" name="task[title]" value="<%= @task.title %>" class="form_control"><br>
  <textarea name="task[description]" class="form_control"><%= @task.description %></textarea><br>
  <input type="submit" class="form_control">
</form>
